@page
@model sistemE.Pages.Pagamentos.CreateModel

@{
    ViewData["Title"] = "Novo";
}

<h1>Novo Pagamento</h1>

<h4>Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pagamento.NumParcela" class="control-label"></label>
                <input asp-for="Pagamento.NumParcela" class="form-control" />
                <span asp-validation-for="Pagamento.NumParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagamento.DataVenc" class="control-label"></label>
                <input asp-for="Pagamento.DataVenc" class="form-control" />
                <span asp-validation-for="Pagamento.DataVenc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagamento.DataPag" class="control-label"></label>
                <input asp-for="Pagamento.DataPag" class="form-control" />
                <span asp-validation-for="Pagamento.DataPag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagamento.Idemprestimo" class="control-label"></label>
                <input asp-for="Pagamento.Idemprestimo" class="form-control" />
                <span asp-validation-for="Pagamento.Idemprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
