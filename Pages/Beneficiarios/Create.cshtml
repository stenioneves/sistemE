@page
@model sistemE.Pages.Beneficiarios.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Novo</h1>

<h4>Beneficiario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Beneficiario.Nome" class="control-label"></label>
                <input asp-for="Beneficiario.Nome" class="form-control" />
                <span asp-validation-for="Beneficiario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiario.Responsavel" class="control-label"></label>
                <select asp-for="Beneficiario.Responsavel" class ="form-control" asp-items="ViewBag.Responsavel"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
